<UserControl x:Class="SA.Plugin.View.EmbeddedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             Style="{DynamicResource CommonFont}"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Semantic.UI;component/Resources/Semantic.UI.Common.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Semantic.UI;component/Resources/Semantic.UI.MenuItem.xaml"/>
                <ResourceDictionary>
                    <Style TargetType="TextBox">
                        <Setter Property="Background" Value="Yellow"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="{StaticResource LeftRightTopBottomMargin}"/>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <TextBox x:Name="textBox" AcceptsReturn="True" AcceptsTab="False" Text="A plugin control embedded in a host application decorator&#x0a;&#x0a;To throw exception, enter dollar sign"/>
    </Grid>
</UserControl>
